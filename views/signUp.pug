doctype html
head
  // Required meta tags
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  // Bootstrap CSS
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
  // css link
  // google fonts
  link(href='https://fonts.googleapis.com/css2?family=Audiowide&family=Oleo+Script+Swash+Caps:wght@700&family=Righteous&family=Yanone+Kaffeesatz:wght@600&display=swap' rel='stylesheet')
  link(href='https://fonts.googleapis.com/css2?family=Audiowide&family=Oleo+Script+Swash+Caps:wght@700&family=Righteous&display=swap' rel='stylesheet')
  // css link
  link(rel='stylesheet' href='/css/style.css')
  link(rel='stylesheet' href='/css/signupStyle.css')
  title karibu groceries ltd
// nav bar
#navbar.nav_head
  .logo
    a(href='/')
      img#slider.img-fluid(src='/images/logo.png' alt='')
      span Karibu Groceries Limited
  .navbar
    ul
      li
        a(href='/') Home
      
      li
        a.action(href='/login') Log in
// nav bar
#container.container-fluid
  .welcomText
    div
      h1 Welcome
      h3  Karibu Groceries Ltd Management System
    div
      p
        | Please sign up OR have an account?
        span
          a(href='/login') Log in
      p
        | Read 
        span
          a(href='#') Data privacy policy
  form(action='/register' method='POST' name='regForm')
    .welcomText
      h1 Register
    .input-container.ic2
      input#nameId.input(name='user_name' type='text' placeholder=' ' onblur='validName()')
      .cut.cut
      label.placeholder(for='user_name') User Name 
    p#nameError.info
    // designation
    .input-container.ic2
      select#positionId.input(name='position' type='text' onblur='validPost()')
        option(value='Default') Please select a position
        option(value='attendant') Sales Attendant
        option(value='manager') Branch Manager
        option(value='director') Director
      .cut.cut
      label.placeholder(for='position') Position 
    p#postErr.info
    // branch
    .input-container.ic2
      select#positionId.input(name='branch' type='text' onblur='validPost()')
        option(value='Default') Please select a branch
        option(value='maganjo') Maganjo
        option(value='matuga') Matugga
      .cut.cut
      label.placeholder(for='branch') Branch 
    p#postErr.info
    // branch
    .input-container.ic2
      input#regEmail.input(name='regEmail' type='email' placeholder=' ' onblur='validateMail()')
      .cut.cut-short
      label.placeholder(for='regEmail') Email
    p#emailError.info
    .input-container.ic2
      input#regPass.input(name='regPass' type='password' placeholder=' ' onblur='validRegPwd()')
      .cut
      label.placeholder(for='regPass') Passoword
    p#pwdError.info
    // select branch
    button.signupBtn(type='submit') Sign Up

