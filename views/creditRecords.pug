doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  // Bootstrap CSS
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' crossorigin='anonymous')
  link(rel='stylesheet' href='/css/style.css')
  link(rel='stylesheet' href='/css/tableStyle.css')
  
  
  title System users
body
  .container
    table.responsive-table-credit
      .logo
        h2
          img(src='/images/logo.png' alt='')
      h1#title Credit Sales Records
      thead
        tr.headings
          th Product Name
          th Type
          th Quantity
          th Dispatch Date
          th Amount
          th Due Date
          th Debtor/ Buyer
          th Buyer Location
          th NIN
          th Telephone
          th Sales Agent
          th
          <th></th>
          <th></th>
          
        if creditsales.length 
          each creditsale in creditsales
            tbody
              tr.data-row
                th(scope='row') #{creditsale.selectProdName}
                td #{creditsale.proType}
                td #{creditsale.tonesQty}
                td #{creditsale.dispatchDate}
                td #{creditsale.amountDue}
                td #{creditsale.dueDate}
                td #{creditsale.debtor}
                td #{creditsale.buyerLocation}
                td #{creditsale.buyerID}
                td #{creditsale.buyerTel}
                td #{creditsale.salesAtten}
                td
                
                td
                  a.updatebtn(href="/credit/updatedebtors/"+creditsale._id) Update
                td
                  form.delete(method='post' action='/credit/delete')
                    input(type="hidden", placeholder="", name='id', value=creditsale._id)
                    button.deleteBtn(type='submit') Delete
                 
      tr.headings2 
        th #{creditsales.length} Transactions 
        th Total:
        th Quantity: #{total.totalWeight}
        th 
        th Amount: #{total.totalAmount}
        th 
        th 
        th 
        th
        th 
        th 
        th
        <th></th>
        <th></th>
                  
                  




              
