  title karibu groceries ltd
// nav bar
#navbar.nav_head
  .logo
    a(href='/')
      img#slider.img-fluid(src='./images/logo.png' alt='')
      span Karibu Groceries Limited
  .navbar
    ul
      li
        a(href='/') Home
      li
        a.action(href='/login') Log in
// nav bar
#container.container-fluid
  .welcomText
    div
      h1 Welcome Back 
      h3  Karibu Groceries Ltd Management System
    div
      p Please Login OR
      p
        span
          a(href='/resetpassword') Forgot Password?
  form(action='/login' method ="POST" name='loginForm' id="loginForm" onsubmit='return validLogin()')
    .welcomText
      h1 Login
    .input-container.ic2
      input#email.input(name='regEmail' type='email' placeholder=' ' onblur='validEmail()')
      .cut.cut-short
      label.placeholder(for='regEmail') Email 
    p#emailError.info
    .input-container.ic2
      input#password.input(name='password' type='password' placeholder=' ' onblur='validPass()')
      .cut
      label.placeholder(for='regPass') Password
    p#pwdError.info &grave;
    button#logbtn.loginBtn(type='submit') Login
