doctype html
head
  // Required meta tags
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  // Bootstrap CSS
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
  // css link added
  // google fonts
  link(href='https://fonts.googleapis.com/css2?family=Audiowide&family=Oleo+Script+Swash+Caps:wght@700&family=Righteous&family=Yanone+Kaffeesatz:wght@600&display=swap' rel='stylesheet')
  link(href='https://fonts.googleapis.com/css2?family=Audiowide&family=Oleo+Script+Swash+Caps:wght@700&family=Righteous&display=swap' rel='stylesheet')
  // fontawesome icons
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css')
  // css link
  link(rel='stylesheet' href='/css/style.css')
  link(rel='stylesheet' href='/css/creditsalesStyle.css')
  title karibu groceries ltd
// nav bar
#navbar.nav_head
  .logo
    a(href='/')
      img#slider.img-fluid(src='./images/logo.png' alt='')
      span Karibu Groceries Limited
  .navbar
    ul
      li
        a(href='/') Home
      li
        a(href='/sales') Cash-Sale
      li
        a(href='/credit') Credit-Sale
      li
        a.action(href='/login/logout') Log out
// nav bar
#container.container-fluid
  form(action='/credit' method="POST" name='creditForm')
    .formTitle
      h2 Credit Sales Records
      p#infoError
      h2
        span #{user.user_name} | #{user.position} | #{user.branch || "No"} branch
    // bootstrap grid system for the form
    // row 1
    .row.gy-3
      .col-md-6.col-12.col1
        .input-container.ic2
          select#prodName.input(name='selectProdName' type='text' onblur='valProdName()' required='')
            option(value='') Please select a name of produce
            option(value='beans') Beans
            option(value='maize') Grain Maize
            option(value='peas') Cow Peas
            option(value='gnuts') G-Nuts
            option(value='soya') Soy Beans
          .cut.cut
          label.placeholder(for='selectProdName') Name of Produce 
      // 2
      .col-md-6.col-12.col1
        .input-container.ic2
          select#produceType.input(name='proType' type='text' onblur='valProduceType()' required='')
            option(value='') Please select type of produce
            option(value='cereal') Cereal
            option(value='grains') Grain
            option(value='legumes') Legumes
            option(value='other') Other
            // ask ozzy for types
          .cut.cut
          label.placeholder(for='proType') Type of Produce 
    // row 1 ends
    // row 2
    .row.gy-3
      .col-md-6.col-12.col1
        .input-container.ic2
          input#kgtonnes.input(name='tonesQty' type='number' placeholder=' ' required='' onblur='validateWeight()')
          .cut.cut
          label.placeholder(for='tonesQty') Number of Tones 
      .col-md-6.col-12.col1
        .input-container.ic2
          input#dispatchDate.input(name='dispatchDate' type='date' placeholder=' ' required='' onblur='')
          .cut.cut
          label.placeholder(for='dispatchDate') Date of Dispatch
    // row 2 ends
    // row 3
    .row.gy-3
      .col-md-6.col-12.col1
        .input-container.ic2
          input#amountCredited.input(name='amountDue' type='number' placeholder=' ' required='' onblur='validcreditDue()')
          .cut.cut-short
          label.placeholder(for='amountDue') Amount Due 
      // 2
      .col-md-6.col-12.col1
        .input-container.ic2
          input#dueDate.input(name='dueDate' type='date' placeholder=' ' required='' onblur='')
          .cut.cut-short
          label.placeholder(for='dueDate') Due Date
    // row 3
    // row 4
    .row.gy-3
      .col-md-6.col-12.col1
        .input-container.ic2
          input#buyer_Name.input(name='debtor' type='text' placeholder=' ' onblur='validateDebtor()' required='')
          .cut.cut
          label.placeholder(for='debtor') Name of Buyer 
      .col-md-6.col-12.col1
        .input-container.ic2
          input#location.input(name='buyerLocation' type='text' placeholder=' ' onblur='validLocation()' required='')
          .cut.cut
          label.placeholder(for='buyerLocation') Location of Buyer 
    // row4 ends
    // row 5
    .row.gy-3
      .col-md-6.col-12.col1
        .input-container.ic2
          input#buyerIdentity.input(name='buyerID' type='text' placeholder=' ' onblur='validateID()' required='')
          .cut.cut-short
          label.placeholder(for='buyerID') ID Number 
      .col-md-6.col-12.col1
        .input-container.ic2
          input#Phone.input(name='buyerTel' type='text' placeholder=' ' onblur='validateTel()' required='')
          .cut.cut
          label.placeholder(for='buyerTel') Phone Number
    // row 5 ends
    // row 6
    .row.gy-3
      .col-md-6.col-12.col1
        .input-container.ic2
          input#sales_agent.input(name='salesAtten' type='text' placeholder=' ' required='' value=user.user_name onblur='validAgent()')
          .cut.cut
          label.placeholder(for='salesAtten') Name of Attendant
      .col-md-6.col-12.col1
        //
          <h2 class="btns"><a href="./salesRecord.html"><i class="fa fa-plus-circle add" aria-hidden="true"></i>Cash Sale</a></h2>
        .input-container.ic2
          .save
            button.saveBtn(type='submit')
              i.fa.fa-plus-circle.add(aria-hidden='true')
              | Save Record
              i#sendIcon.fa.fa-paper-plane(aria-hidden='true')
  // Option 1: Bootstrap Bundle with Popper
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
  script(src='./js/home.js')
  script(src='./js/validate.js')
