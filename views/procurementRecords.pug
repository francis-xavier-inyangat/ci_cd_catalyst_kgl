doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  // Bootstrap CSS
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' crossorigin='anonymous')
  link(rel='stylesheet' href='/css/style.css')
  link(rel='stylesheet' href='/css/tableStyle.css')
  
  
  title System users
body
  .container
    //- p Total Weight 
    //- p #{total.totalWeight} kgs
    //- p Total Amount
    //- p #{total.totalAmount} $
    table.responsive-table
      .logo
        h2
          img(src='/images/logo.png' alt='')
      h1#title Stock Inventory
      thead
        tr.headings
          th Product Name
          th Type
          th Dispatch Date
          th Unit cost
          th Weight(tones)
          th Amount
          th Term of Pay
          th Recceipt No./Due date/other
          th Supplier
          <th></th>
          <th></th>
          
        if purchases.length 
          each purchase in purchases
            tbody
              tr.data-row
                th(scope='row') #{purchase.consignment}
                td #{purchase.typeofProduce}
                td #{purchase.dispatchDate}
                td #{purchase.unitCost}
                td #{purchase.no_kgs}
                td #{purchase.pay}
                td #{purchase.payTerms}
                td #{purchase.receiptNum ||purchase.dueDate || purchase.otherPay}
                td #{purchase.supplierName}

                td
                  a.updatebtn(href="/procurement/updatestock/"+purchase._id) Update 
                td
                  form.delete(method='post' action='/procurement/delete')
                    input(type="hidden", placeholder="", name='id', value=purchase._id)
                    button.deleteBtn(type='submit') Delete
                
        thead
        tr.headings2
          th #{purchases.length} Transactions
          th 
          th 
          th TOTAL:
          th Quantity Sold: #{total.totalWeight}
          th Amount: #{total.totalAmount}
          th 
          th 
          th 
          <th></th>
          <th></th>
          
                  
                  




              
